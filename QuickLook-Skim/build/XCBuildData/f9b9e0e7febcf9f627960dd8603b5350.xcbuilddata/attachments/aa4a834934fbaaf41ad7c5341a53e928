#!/bin/sh
if [ "${BUILD_STYLE}" = "Debug" -o "${CONFIGURATION}" = "Debug" ]; then
exit 0
fi

echo "*** stripping header files from frameworks ***"
find "${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}" -type file -name "*.h" -delete
find "${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}" \( -type d -or -type l \) \( -name Headers -or -name PrivateHeaders \) -delete

echo "*** removing .DS_Store files ***"
find "${BUILT_PRODUCTS_DIR}/${UNLOCALIZED_RESOURCES_FOLDER_PATH}" -type file -name ".DS_Store" -delete

